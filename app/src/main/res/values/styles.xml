<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textViewStyle">@style/SFUITextViewStyle</item>
    <item name="android:buttonStyle">@style/SFUIButtonStyle</item>
    <item name="android:editTextStyle">@style/SFUIEditTextStyle</item>
  </style>

  <style name="SFUITextViewStyle" parent="android:Widget.Material.Light.TextView">
    <item name="android:fontFamily">@font/sfui_display_medium</item>
  </style>

  <style name="SFUIButtonStyle" parent="android:Widget.Material.Light.Button">
    <item name="android:fontFamily">@font/sfui_display_semibold</item>
  </style>

  <style name="SFUIEditTextStyle" parent="android:Widget.Material.Light.EditText">
    <item name="android:fontFamily">@font/sfui_display_medium</item>
  </style>

  <!-- Common Style-->
  <style name="common_logo_image">
    <item name="android:layout_width">110dp</item>
    <item name="android:layout_height">63dp</item>
    <item name="android:layout_marginStart">34dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:src">@drawable/header_logo</item>
  </style>

  <!-- Login Style-->
  <style name="login_form_label_text_view">
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="login_form_value_edit_text">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- Home Style-->
  <style name="home_feature_item_layout">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- Survey Style-->
  <style name="survey_form_question_layout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">25dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="survey_form_question_title">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:lineSpacingExtra">-2dp</item>
    <item name="android:layout_marginBottom">20dp</item>
    <item name="android:textColor">#010101</item>
    <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
  </style>

  <style name="survey_form_question_other_answer_rl">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">20dp</item>
    <item name="android:layout_marginStart">50dp</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="survey_form_question_answer_edt">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">10dp</item>
    <item name="android:background">@drawable/common_edt_bordered_background</item>
  </style>

  <style name="survey_form_question_clear_answer">
    <item name="android:layout_width">36dp</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:layout_alignParentEnd">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:src">@drawable/ic_clear_button</item>
    <item name="android:visibility">invisible</item>
  </style>
</resources>
